header {
    padding: 28px 0 29px 0;
    height: 100px;
    box-sizing: border-box;
    background: rgba(0, 0, 0, 0.13);
    transition: .4s;
}

header ul {
    align-items: center;
    display: flex;
    margin: 0;
    padding: 0;
}

header ul li {
    box-sizing: border-box;
    list-style-type: none;
    transition: .4s
}

header ul li a {
    color: #fff;
    box-sizing: border-box;
    font-size: 16px;
    line-height: 20px;
    border-bottom: 1px solid transparent;
    padding-bottom: 25px;
    transition: .4s
}

header ul li:hover a {
    border-bottom: 1px solid #fff;
    padding-bottom: 15px;
    transition: .4s
}

header ul li:not(:last-child) {
    margin-right: 60px;
}

header .container {
    align-items: center;
    display: flex;
    justify-content: space-between;
}

.container {
    margin: 0 auto;
}

@media (min-width: 1200px) {
    .container {
        width: 1140px;
    }
}

@media (min-width: 1400px) {
    .container {
        width: 1320px;
    }
}
