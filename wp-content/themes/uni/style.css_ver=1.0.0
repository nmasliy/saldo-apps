@media (max-width: 1100px) {

    /* скрываем чекбокс */
    #menu__toggle {
        display: none;
        opacity: 0;
    }
    .hamburger-menu{
        background: rgba(237, 237, 237, 0.1);
        border-radius: 10px;
        box-sizing: border-box;
        width: 46px;
        height: 46px;
        align-items: center;
        justify-content: center;
    }
    /* стилизуем кнопку */
    .menu__btn {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        top: 0;
        left: 0;
        width: 24px;
        height: 24px;
        cursor: pointer;
        z-index: 1;
    }

    /* добавляем "гамбургер" */
    .menu__btn>span,
    .menu__btn>span::before,
    .menu__btn>span::after {
        display: block;
        position: absolute;
        width: 100%;
        height: 3px;
        background-color: #fff;
    }

    .menu__btn>span::before {
        content: '';
        top: -8px;
    }

    .menu__btn>span::after {
        content: '';
        top: 8px;
    }

    /* контейнер меню */
    header .menu__box {
        display: block;
        position: fixed;
        visibility: hidden;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        margin: 0;
        margin-top: 100px;
        padding: 0 30px 23px 30px;
        box-sizing: border-box;
        list-style: none;
        text-align: left;
        background-color: #000000;
        box-shadow: 1px 0px 6px rgba(0, 0, 0, .2);
        z-index: 9;
    }

    /* элементы меню */
    header .menu__box a {
        display: block;
        font-weight: 400;
        font-size: 18px;
        line-height: 20px;
        color: #FFFFFF;
        text-decoration: none;
        padding: 25px 0;
    }

    header .menu__box a{
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    /* header .menu__box a:hover {
        background-color: #CFD8DC;
    } */

    #menu__toggle:checked~.menu__btn>span {
        transform: rotate(45deg);
    }

    #menu__toggle:checked~.menu__btn>span::before {
        top: 0;
        transform: rotate(0);
    }

    #menu__toggle:checked~.menu__btn>span::after {
        top: 0;
        transform: rotate(90deg);
    }

    header #menu__toggle:checked~.menu__box {
        visibility: visible;
        left: 0;
    }
    
    header.black{
        background: #000;
    }
    html.lock{
        overflow: hidden;
    }
    .menu__btn>span,
    .menu__btn>span::before,
    .menu__btn>span::after {
        transition-duration: .25s;
    }

    header .menu__box {
        transition-duration: .25s;
    }

    header .menu__box a {
        transition-duration: .25s;
    }

    .hamburger-menu {
        display: flex;
    }
    header ul li:not(:last-child) {
        margin-right: 0;
    }
}

